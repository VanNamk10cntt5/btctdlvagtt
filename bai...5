#include <iostream>
using namespace std;

int countPositive(float arr[], int n) {
    // Điểm dừng của đệ quy
    if (n == 1) {
        if (arr[0] > 0) {
            return 1;
        } else {
            return 0;
        }
    }
    // Xử lý trường hợp đơn giản
    int count = countPositive(arr, n-1);
    // Xử lý trường hợp chung
    if (arr[n-1] > 0) {
        count++;
    }
    return count;
}

int main() {
    int n;
    cout << "Enter n: ";
    cin >> n;
    float arr[n];
    for (int i = 0; i < n; i++) {
        cout << "Enter element " << i << ": ";
        cin >> arr[i];
    }
    int count = countPositive(arr, n);
    cout << "Number of positive elements: " << count << endl;
    return 0;
}
