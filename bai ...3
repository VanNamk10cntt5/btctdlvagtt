#include <iostream>
using namespace std;

int X(int n) {
    if (n == 0) {
        return 1;
    } else {
        return X(n-1) + Y(n-1);
    }
}

int Y(int n) {
    if (n == 0) {
        return 0;
    } else {
        return 3 * X(n-1) + 2 * Y(n-1);
    }
}

int main() {
    int n;
    cout << "Enter n: ";
    cin >> n;
    int xn = X(n);
    int yn = Y(n);
    cout << "X(" << n << ") = " << xn << endl;
    cout << "Y(" << n << ") = " << yn << endl;
    return 0;
}
